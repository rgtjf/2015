<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@android:style/Theme.Holo.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="myTitle_Base" parent="android:Theme.Light" >
        <item name="android:windowTitleSize">@dimen/title_height</item>
        <item name="android:windowTitleBackgroundStyle">@color/titleColor</item>
    </style>
    
    <style name="myTitle" parent="android:Theme.Light" >
        <item name="android:windowTitleSize">@dimen/title_height</item>
        <item name="android:windowTitleBackgroundStyle">@color/titleColor</item>
        <item name="android:windowAnimationStyle">@style/AnimationFade_Gradient</item>  
    </style>
    
    <style name="myTitle_test" parent="@android:style/Theme.Holo.Light.NoActionBar" >
        <item name="android:windowAnimationStyle">@style/AnimationFade_Gradient</item>
    </style>
    
    
    <style name="NoTitle_gradient_InAndOut" parent="android:Theme" >
        <item name="android:windowNoTitle">true</item>  
        <item name="android:windowAnimationStyle">@style/AnimationFade_Gradient_startPageNormal</item>  
    </style>
    
    <style name="NoTitle_gradient_justIn">  
		<item name="android:windowAnimationStyle">@style/AnimationFade_Gradient</item>  
		<item name="android:windowNoTitle">true</item>  
 	</style>
 	
    <style name="NoTitle_leftRight_InAndOut">  
		<item name="android:windowAnimationStyle">@style/Animation_Page_LeftRight</item>  
		<item name="android:windowTitleSize">@dimen/title_height</item>
        <item name="android:windowTitleBackgroundStyle">@color/titleColor</item>
 	</style>
    
    
    
    
    
    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">true</item><!--半透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@color/transparent_white</item><!--背景透明-->
        <item name="android:backgroundDimEnabled">true</item><!--模糊-->
        <item name="android:windowAnimationStyle">@+android:style/Animation.Translucent</item>
    </style>
    
    <style name="dialog_huodong_tixing" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">true</item><!--半透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@color/transparent_white</item><!--背景透明-->
        <item name="android:backgroundDimEnabled">true</item><!--模糊-->
    </style>
    
    <style name="dialog_login" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">true</item><!--半透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@color/transparent_white</item><!--背景透明-->
        <item name="android:backgroundDimEnabled">true</item><!--模糊-->
    </style>
    
    
    
    
    <style name="loading_progressBar" parent="@android:style/Widget.ProgressBar.Large">
        <item name="android:minHeight">@dimen/widget_progressBar_size</item>
        <item name="android:maxHeight">@dimen/widget_progressBar_size</item>
        <item name="android:minWidth">@dimen/widget_progressBar_size</item>
        <item name="android:maxHeight">@dimen/widget_progressBar_size</item>
    </style>
    
    <style name="chat_text_date_style">
        <item name="android:padding">2dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/chat_time_block</item>
    </style>
    
    
    
    
    <style name="font_middle_content">
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="font_middle_title">
        <item name="android:textSize">20sp</item>
    </style>
    
    <style name="font_middle_shortIntroduce">
        <item name="android:textSize">15sp</item>
    </style>
    
    <style name="font_small">
        <item name="android:textSize">12sp</item>
    </style>
    
    <style name="font_shetuandingyue_main">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#716A6A</item>
        <item name="android:paddingBottom">5dp</item>
    </style>
    
    
    <style name="AnimationFade_TopButton"> 
		<!-- PopupWindow上下弹出的效果--> 
		<item name="android:windowEnterAnimation">@anim/in_bottom_totop</item> 
		<item name="android:windowExitAnimation">@anim/out_top_tobottom</item> 
	</style> 
	
    <style name="AnimationFade_Gradient"> 
		<!-- TextFull渐变出现和消失效果--> 
		<item name="android:windowEnterAnimation">@anim/in_gradient</item> 
	</style> 
	
    <style name="AnimationFade_Gradient_startPageNormal"> 
		<!-- startPageNormal进入和退出渐变--> 
		<item name="android:windowEnterAnimation">@anim/in_gradient_startpage</item>
		<item name="android:windowExitAnimation">@anim/out_gradient_startpage</item> 
	</style> 
	
    <style  name="Animation_Page_LeftRight">
        <!-- 页面从右进入从右-->
        <item name="android:windowEnterAnimation">@anim/right_to_left</item>
		<item name="android:windowExitAnimation">@anim/left_to_right</item> 
    </style>
	

</resources>
 