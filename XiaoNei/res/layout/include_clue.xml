<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/clue_linear"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@color/main_background" >
    
    <ImageView 
        android:id="@+id/clue_image"
        android:layout_height="@dimen/include_clue_image_size"
        android:layout_width="@dimen/include_clue_image_size"
        android:layout_above="@+id/clue_text1"
        android:layout_centerHorizontal="true"
        android:src="@drawable/clue"
        android:scaleType="centerCrop"/>
    
    <TextView 
        android:id="@+id/clue_text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerVertical="true"
        android:gravity="center_horizontal"
        android:textColor="@color/text_gray_clue"
        android:text="@string/clue_mysubscribe_text1"
        android:textSize="@dimen/include_clue_text_size"/>
    
    <TextView 
        android:id="@+id/clue_text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/clue_text1"
        android:gravity="center_horizontal"
        android:textColor="@color/text_gray_clue"
        android:text="@string/clue_mysubscribe_text2"
        android:textSize="@dimen/include_clue_text_size"/>

</RelativeLayout>