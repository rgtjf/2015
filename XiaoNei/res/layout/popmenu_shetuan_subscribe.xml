<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:orientation="horizontal" >
    
<RelativeLayout 
    android:layout_height="wrap_content"
    android:layout_width="@dimen/pop_menu_function_item_width"
    android:background="@drawable/background_popmenu" >
    <Button 
        android:id="@+id/change_school"
        android:layout_height="@dimen/pop_menu_function_item_height"
        android:layout_width="@dimen/pop_menu_function_item_width"
        android:text="切换学校"
        android:textSize="@dimen/pop_menu_textsize"
        android:textColor="#000000"
        android:background="@drawable/selector_cover_transparent"/>
    <ImageView 
        android:id="@+id/line_1"
        android:layout_below="@+id/change_school"
        android:layout_width="@dimen/pop_menu_function_item_width"
        android:layout_height="0.5dp"
        android:background="@color/line"/>
    <Button 
        android:id="@+id/search"
        android:layout_below="@+id/line_1"
        android:layout_height="@dimen/pop_menu_function_item_height"
        android:layout_width="@dimen/pop_menu_function_item_width"
        android:text="搜索"
        android:textSize="@dimen/pop_menu_textsize"
        android:textColor="#000000"
        android:background="@drawable/selector_cover_transparent"/>

</RelativeLayout>

<ImageView 
    android:layout_height="match_parent"
    android:layout_width="@dimen/pop_menu_screen_padding_right"
    android:background="@color/transparent"/>

</LinearLayout>
