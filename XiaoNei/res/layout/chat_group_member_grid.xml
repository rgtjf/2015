<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:scrollbarStyle="outsideOverlay"
	android:scrollbarThumbVertical="@drawable/shape_widget_scollbar"
	android:scrollbarSize="@dimen/widget_scrollbar_width"
    android:background="@color/chat_bottom_background" >
    
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/chat_group_member_all_padding_top"
    android:paddingBottom="@dimen/chat_group_member_all_padding_top"
    android:background="@color/chat_background" >
    
    
    <com.shoulder.xiaonei.myClass_myView.MyGridView
        android:id="@+id/chat_group_member_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/chat_group_member_all_padding_h"
        android:paddingRight="@dimen/chat_group_member_all_padding_h"
        android:cacheColorHint="@color/transparent"
        android:listSelector="@color/transparent"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbarSize="@dimen/widget_scrollbar_width"
        android:scrollbarThumbVertical="@drawable/shape_widget_scollbar"
        android:numColumns="4"
        android:background="#ffffff">
	</com.shoulder.xiaonei.myClass_myView.MyGridView>
	
</LinearLayout>
</ScrollView>