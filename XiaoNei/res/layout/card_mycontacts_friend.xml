<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/myCard"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/selector_white">
    
    <ImageView 
        android:id="@+id/contacts_avatar"
        android:layout_height="@dimen/contacts_avator_size"
        android:layout_width="@dimen/contacts_avator_size"
        android:layout_marginLeft="@dimen/contacts_avator_padding_left"
        android:layout_marginTop="@dimen/contacts_avator_padding_v"
        android:layout_marginBottom="@dimen/contacts_avator_padding_v"
        android:src="@drawable/test_1"
        />
    
    <ImageView 
        android:visibility="gone"
        android:id="@+id/contacts_redDot"
        android:layout_height="@dimen/contacts_redDot_size"
        android:layout_width="@dimen/contacts_redDot_size"
        android:layout_marginLeft="@dimen/contacts_redDot_padding_left"
        android:layout_marginTop="@dimen/contacts_redDot_padding_top"
        android:background="@drawable/sharp_widget_chat_red_dot"/>
        
    <TextView 
        android:id="@+id/contacts_name"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@+id/contacts_avatar"
        android:layout_marginLeft="@dimen/contacts_padding_avator_text"
        android:layout_marginTop="@dimen/contacts_name_text_padding_top"
        android:textSize="@dimen/contacts_name_textSize"
        android:textColor="@color/text_black_dark"
        />
    
    <ImageView 
        android:layout_height="0.5dp"
        android:layout_width="match_parent"
        android:layout_below="@+id/contacts_avatar"
        android:background="@color/line"/>

    
</RelativeLayout>
