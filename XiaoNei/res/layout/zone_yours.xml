<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
    
    <LinearLayout 
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">
    <ImageView 
        android:id="@+id/background_top"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:background="@color/zone_background_boy_green"/>
    
    <RelativeLayout 
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1">
        
        <Button 
            android:id="@+id/let_us_chat"
            android:layout_height="@dimen/zone_button_letUsChat_height"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/zone_button_letUsChat_padding_h"
            android:layout_marginRight="@dimen/zone_button_letUsChat_padding_h"
            android:layout_marginBottom="@dimen/zone_button_letUsChat_padding_bottom"
            android:layout_alignParentBottom="true"
            android:text="@string/zone_button_letUsChat"
            android:textSize="@dimen/zone_button_letUsChat_textSize"
            android:textColor="#ffffff"
            android:background="@drawable/selector_button_green"/>
    </RelativeLayout>
    </LinearLayout>
    
    <com.shoulder.xiaonei.myClass_myView.CircularImage
        android:id="@+id/photo_before_bigger"
        android:layout_height="@dimen/zone_photo_before_bigger_size"
        android:layout_width="@dimen/zone_photo_before_bigger_size"
        android:layout_centerInParent="true"/>
    
    <com.shoulder.xiaonei.myClass_myView.CircularImage
        android:id="@+id/photo_before_smaller"
        android:layout_height="@dimen/zone_photo_before_smaller_size"
        android:layout_width="@dimen/zone_photo_before_smaller_size"
        android:layout_centerInParent="true"/>
    
    <TextView 
        android:id="@+id/yourIntroduce"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_above="@id/photo_before_bigger"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/zone_padding_introduce_photo"
        android:text="华东师范大学-商学院信息学系"
        android:textSize="@dimen/zone_text_introduce"
        android:textColor="#ffffff"/>
    
    <TextView 
        android:id="@+id/yourName"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_above="@+id/yourIntroduce"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/zone_padding_name_introduce"
        android:text="泡椒稻蛙"
        android:textSize="@dimen/zone_text_name"
        android:textColor="#ffffff"/>
        
    
    <RelativeLayout 
         android:id="@+id/left_relativelayout"
         android:layout_alignParentLeft="true"
         android:layout_width="@dimen/title_left_width"
         android:layout_height="@dimen/title_height">
	    <ImageView 
	        android:id="@+id/logoMenu"
	        android:layout_height="@dimen/title_iconMenu_height"
	        android:layout_width="@dimen/card_main_padding_left"
	        android:layout_centerVertical="true"
	        android:src="@drawable/back"
	        android:scaleType="centerCrop"/>
	    <Button
	          android:id="@+id/left_btn" 
	          android:layout_width="fill_parent"
	          android:layout_height="fill_parent"
	          android:background="@drawable/selector_cover_transparent"/>
    </RelativeLayout>
    
    	<Button 
	        android:id="@+id/guanzhu"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:layout_alignParentTop="true"
	        android:layout_alignParentRight="true"
	        android:text="+ 关注"/>
     

</RelativeLayout>