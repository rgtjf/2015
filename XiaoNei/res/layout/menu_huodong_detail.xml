<?xml version="1.0" encoding="utf-8"?>
<com.shoulder.xiaonei.myClass_myView.MyScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none"
    android:background="#ffffff">
   <LinearLayout 
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       android:fillViewport="true">
       <RelativeLayout 
           android:layout_width="fill_parent"
           android:layout_height="160dp">
           <ImageView 
               android:id="@+id/org_logo"
               android:layout_width="fill_parent"
               android:layout_height="160dp"
               android:scaleType="centerCrop"/>

           <Button
               android:id="@+id/count_member"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentBottom="true"
               android:layout_alignParentRight="true"
               android:background="@drawable/shape_button_menu_shetuan_guanzhu"
               android:text="已有x人关注\n快点击关注吧"
               android:layout_marginBottom="15dp"
               android:textColor="#ffffff" />

       </RelativeLayout>
       <ImageView                                                                                           
           android:layout_width="fill_parent"
           android:layout_height="0.5dp"
           android:background="@color/line"
           android:layout_marginLeft="15dp"
           android:layout_marginRight="15dp"
           android:layout_marginTop="0dp"/>
       <RelativeLayout
           android:layout_width="fill_parent"
           android:layout_height="wrap_content">
       <TextView 
           android:id="@+id/org_name"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="25sp"
           android:text="等待数据中.."
           android:layout_marginLeft="15dp"
           android:layout_marginTop="15dp"/>

       </RelativeLayout>

       <TextView 
           android:id="@+id/org_introduce"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           style="@style/font_middle_content"
           android:layout_marginLeft="15dp"
           android:layout_marginRight="20dp"
           android:layout_marginTop="20dp"/>
       <ImageView 
           android:layout_width="fill_parent"
           android:layout_height="0.5dp"
           android:background="@color/line"
           android:layout_marginLeft="15dp"
           android:layout_marginRight="15dp"
           android:layout_marginTop="20dp"/>
       <Button 
           android:id="@+id/more"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:textSize="20sp"
           android:textColor="#349BCB"
           android:background="@drawable/selector_cover_transparent"
           android:paddingTop="20dp"
           android:paddingBottom="20dp"
           android:layout_marginLeft="15dp"
           android:layout_marginRight="15dp"
           android:text="更多>>"
           />
         <ImageView 
           android:layout_width="fill_parent"
           android:layout_height="0.5dp"
           android:background="#E5E5E5"
           android:layout_marginLeft="15dp"
           android:layout_marginRight="15dp"
           />

   </LinearLayout>
    

</com.shoulder.xiaonei.myClass_myView.MyScrollView>